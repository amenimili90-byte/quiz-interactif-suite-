# ====================
# GESTION DES ERREURS
# ====================

# Pages d'erreur personnalisées (créer ces fichiers si souhaité)
# ErrorDocument 400 /error-400.html
# ErrorDocument 401 /error-401.html
# ErrorDocument 403 /error-403.html
# ErrorDocument 404 /error-404.html
# ErrorDocument 500 /error-500.html

# ====================
# PHP CONFIGURATION
# ====================

# Limite de taille de téléchargement (si upload de fichiers)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Limite de temps d'exécution
php_value max_execution_time 30
php_value max_input_time 60

# Gestion des sessions
php_value session.cookie_httponly 1
php_value session.use_only_cookies 1
php_value session.cookie_secure 0
# Changer à 1 si HTTPS : php_value session.cookie_secure 1

# Masquer la version de PHP
php_flag expose_php off

# ====================
# OPTIMISATIONS DIVERSES
# ====================

# Désactiver l'ETags (pour la cohérence du cache)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Limiter la taille des requêtes
LimitRequestBody 10485760